upstream nlp {
    server django:8000;
}

server {

    listen              443 ssl;
    server_name         ${NGINX_HOSTNAME};
    ssl_certificate     /usr/src/app/ssl/cert.crt;
    ssl_certificate_key /usr/src/app/ssl/cert.key;
    ssl_dhparam         /usr/src/app/ssl/dhparam.pem;
    ssl_protocols       TLSv1 TLSv1.1 TLSv1.2 TLSv1.3;
    ssl_ciphers         HIGH:!aNULL:!MD5;
    ssl_session_cache   shared:SSL:10m;
    ssl_session_timeout 10m;
    error_page  497 =308 https://$host:8000$request_uri;

    location / {
        proxy_pass http://nlp;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host:8000;
        proxy_redirect off;
    }

    location /static/ {
        alias /usr/src/app/public/static/;
    }

    location /media/ {
        alias /usr/src/app/public/media/;
    }

}
